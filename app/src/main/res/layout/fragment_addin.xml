<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omarea.vtools.fragments.FragmentAddin">

    <TabHost
        android:id="@+id/addin_tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/tab0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp">

                    <com.omarea.common.ui.OverScrollListView
                        android:id="@+id/addin_system_listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@color/color_list_divider"
                        android:dividerHeight="1sp"
                        android:listSelector="@android:color/transparent" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.omarea.krscript.ui.PageListView
                        android:id="@+id/list_page2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@color/color_list_divider"
                        android:dividerHeight="1sp"
                        android:listSelector="@android:color/transparent"
                        android:padding="10dp" />
                </FrameLayout>
            </FrameLayout>

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </TabHost>
</RelativeLayout>
