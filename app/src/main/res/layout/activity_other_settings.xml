<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="screen"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:keepScreenOn="false"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">

            <GridLayout
                android:id="@+id/vtoolsserviceSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Switch
                    android:id="@+id/settings_autoinstall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="5"
                    android:layout_column="0"
                    android:padding="8dp"
                    android:text="@string/accessbility_autoclick"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="6"
                    android:layout_column="0"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/accessbility_autoclick_desc"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="10dp"
                    android:visibility="gone" />
            </GridLayout>

            <Switch
                android:id="@+id/home_hide_in_recents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:enabled="false"
                android:padding="8dp"
                android:text="@string/home_hide_in_recents"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:text="@string/home_hide_in_recents_desc"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="10dp" />

            <Switch
                android:id="@+id/auto_start_compile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:text="@string/auto_start_compile"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:text="@string/auto_start_compile_desc"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="10dp" />

            <Switch
                android:id="@+id/settings_delaystart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:text="@string/accessbility_delay"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:text="@string/accessbility_delay_desc"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="10dp" />


            <Switch
                android:id="@+id/settings_disable_selinux"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:text="@string/settings_disable_selinux"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:text="@string/settings_disable_selinux_desc"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/settings_theme"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="27dp"
                    android:background="@color/colorBlue"
                    android:onClick="onThemeClick"
                    android:tag="0" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorAccent"
                    android:onClick="onThemeClick"
                    android:tag="1" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/color_load_mid"
                    android:onClick="onThemeClick"
                    android:tag="2" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/color_load_hight"
                    android:onClick="onThemeClick"
                    android:tag="3" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/newYearAccent"
                    android:onClick="onThemeClick"
                    android:tag="4" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/pink"
                    android:onClick="onThemeClick"
                    android:tag="5" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/pretty"
                    android:onClick="onThemeClick"
                    android:tag="6" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/violet"
                    android:onClick="onThemeClick"
                    android:tag="7" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/black_overlay"
                    android:onClick="onThemeClick"
                    android:tag="8" />

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="27dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/sun"
                    android:onClick="onThemeClick"
                    android:tag="-1" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/settings_logcat_title"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="@string/settings_logcat_desc"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="10dp" />

                <Button
                    android:id="@+id/settings_logcat"
                    style="@style/Widget.AppCompat.ActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_bg"
                    android:text="@string/settings_logcat_title"
                    android:textSize="9dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/settings_log_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/layout_app_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.support.v4.widget.DrawerLayout>
