<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.omarea.ui.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/help"
                    android:textColor="?colorAccent"
                    android:textSize="16dp" />

                <TextView
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/core_control_helpinfo" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="20dp">

                <Switch
                    android:id="@+id/cpu_apply_onboot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="开机后应用  " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="开机后应用当前设置，需要允许Scene开机自启动"
                    android:textSize="13dp" />
            </LinearLayout>

            <GridLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_row="0"
                    android:text="Cpuset"
                    android:textColor="?colorAccent"
                    android:textSize="16dp" />

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="1"
                    android:gravity="center_vertical"
                    android:text="用户的后台应用" />

                <TextView
                    android:id="@+id/cpuset_bg"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:padding="5dp"
                    android:text=""
                    android:textAlignment="textEnd" />

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="2"
                    android:gravity="center_vertical"
                    android:text="系统的后台应用" />

                <TextView
                    android:id="@+id/cpuset_system_bg"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:padding="5dp"
                    android:text=""
                    android:textAlignment="textEnd" />

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="3"
                    android:gravity="center_vertical"
                    android:text="前台运行的应用" />

                <TextView
                    android:id="@+id/cpuset_foreground"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:padding="5dp"
                    android:text=""
                    android:textAlignment="textEnd" />

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="4"
                    android:gravity="center_vertical"
                    android:text="显示在上层的应用" />

                <TextView
                    android:id="@+id/cpuset_top_app"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:padding="5dp"
                    android:text=""
                    android:textAlignment="textEnd" />

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="5"
                    android:gravity="center_vertical"
                    android:text="前台应用加速核心" />

                <TextView
                    android:id="@+id/cpuset_boost"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:padding="5dp"
                    android:text=""
                    android:textAlignment="textEnd" />

                <TextView
                    style="@style/textSmall"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_row="6"
                    android:text="Cpuset用于设定不同状态的进程可使用的CPU核心，给后台进程分配较少的CPU核心，可以保证后台过多时前台进程仍然能流畅运行，但也会导致单个核心持续满载，或下载工具后台时下载速度显著变慢。" />

            </GridLayout>

            <GridLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_row="0"
                    android:text="Little Cluster"
                    android:textColor="?colorAccent"
                    android:textSize="16dp" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="1"
                    android:gravity="center_vertical"
                    android:text="最小频率" />

                <TextView
                    android:id="@+id/cluster_little_min_freq"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:padding="5dp"
                    android:text="Min Freq"
                    android:textAlignment="textEnd" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="2"
                    android:gravity="center_vertical"
                    android:text="最大频率" />

                <TextView
                    android:id="@+id/cluster_little_max_freq"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:padding="5dp"
                    android:text="Max Freq"
                    android:textAlignment="textEnd" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="3"
                    android:gravity="center_vertical"
                    android:text="调度模式" />

                <TextView
                    android:id="@+id/cluster_little_governor"
                    android:layout_width="150dp"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:padding="5dp"
                    android:text="Governor"
                    android:textAlignment="textEnd" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="4"
                    android:gravity="center_vertical"
                    android:text="微调参数" />

                <TextView
                    android:id="@+id/cluster_little_governor_params"
                    android:layout_width="150dp"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:padding="5dp"
                    android:text="点击查看"
                    android:textAlignment="textEnd" />

            </GridLayout>

            <GridLayout
                android:id="@+id/big_core_configs"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_row="0"
                    android:text="Big Cluster"
                    android:textColor="?colorAccent"
                    android:textSize="16dp" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="1"
                    android:gravity="center_vertical"
                    android:text="最小频率" />

                <TextView
                    android:id="@+id/cluster_big_min_freq"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:padding="5dp"
                    android:text="Min  Freq"
                    android:textAlignment="textEnd" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="2"
                    android:gravity="center_vertical"
                    android:text="最大频率" />

                <TextView
                    android:id="@+id/cluster_big_max_freq"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:padding="5dp"
                    android:text="Max Freq"
                    android:textAlignment="textEnd" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="3"
                    android:gravity="center_vertical"
                    android:text="调度模式" />

                <TextView
                    android:id="@+id/cluster_big_governor"
                    android:layout_width="150dp"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:padding="5dp"
                    android:text="Governor"
                    android:textAlignment="textEnd" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="4"
                    android:gravity="center_vertical"
                    android:text="微调参数" />

                <TextView
                    android:id="@+id/cluster_big_governor_params"
                    android:layout_width="150dp"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:padding="5dp"
                    android:text="点击查看"
                    android:textAlignment="textEnd" />

            </GridLayout>

            <GridLayout
                android:id="@+id/adreno_gpu"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_row="0"
                    android:text="Adreno GPU"
                    android:textColor="?colorAccent"
                    android:textSize="16dp" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="1"
                    android:gravity="center_vertical"
                    android:text="最小频率" />

                <TextView
                    android:id="@+id/adreno_gpu_min_freq"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:padding="5dp"
                    android:text="Min  Freq"
                    android:textAlignment="textEnd" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="2"
                    android:gravity="center_vertical"
                    android:text="最大频率" />

                <TextView
                    android:id="@+id/adreno_gpu_max_freq"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:padding="5dp"
                    android:text="Max Freq"
                    android:textAlignment="textEnd" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="3"
                    android:gravity="center_vertical"
                    android:text="最小功耗级别" />

                <TextView
                    android:id="@+id/adreno_gpu_min_pl"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:padding="5dp"
                    android:text="Min PL"
                    android:textAlignment="textEnd" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="4"
                    android:gravity="center_vertical"
                    android:text="最大功耗级别" />

                <TextView
                    android:id="@+id/adreno_gpu_max_pl"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:padding="5dp"
                    android:text="Max PL"
                    android:textAlignment="textEnd" />


                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="5"
                    android:gravity="center_vertical"
                    android:text="默认功耗级别" />

                <TextView
                    android:id="@+id/adreno_gpu_default_pl"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="5"
                    android:padding="5dp"
                    android:text="Default PL"
                    android:textAlignment="textEnd" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="6"
                    android:gravity="center_vertical"
                    android:text="调度模式" />

                <TextView
                    android:id="@+id/adreno_gpu_governor"
                    android:layout_width="150dp"
                    android:layout_column="1"
                    android:layout_row="6"
                    android:padding="5dp"
                    android:text="Governor"
                    android:textAlignment="textEnd" />

                <TextView
                    style="@style/textSmall"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_row="7"
                    android:text="大多数时候，GPU性能受功耗级别（Power Level）限制而不是频率设定。\n注意：功耗级别0表示最大高性能，数值越大则性能越低" />
            </GridLayout>

            <GridLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="10dp"
                    android:layout_row="0"
                    android:text="Qualcomm温控"
                    android:textColor="?colorAccent"
                    android:textSize="16dp" />

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="1"
                    android:gravity="center_vertical"
                    android:text="核心控制" />

                <CheckBox
                    android:id="@+id/thermal_core_control"
                    android:layout_column="1"
                    android:layout_row="1" />

                <TextView
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="2"
                    android:gravity="center_vertical"
                    android:text="VDD 限制" />

                <CheckBox
                    android:id="@+id/thermal_vdd"
                    android:layout_column="1"
                    android:layout_row="2" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="3"
                    android:gravity="center_vertical"
                    android:text="温度限制" />

                <CheckBox
                    android:id="@+id/thermal_paramters"
                    android:layout_column="1"
                    android:layout_row="3" />

            </GridLayout>

            <GridLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="10dp"
                    android:layout_row="0"
                    android:text="Exynos"
                    android:textColor="?colorAccent"
                    android:textSize="16dp" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="1"
                    android:gravity="center_vertical"
                    android:text="热插拔" />

                <CheckBox
                    android:id="@+id/exynos_cpuhotplug"

                    android:layout_column="1"
                    android:layout_row="1"
                    android:enabled="false" />

                <TextView
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="left"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_row="2"
                    android:text="Up Threshold" />

                <SeekBar
                    android:id="@+id/exynos_hmp_up"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="3"
                    android:enabled="false"
                    android:max="1000"
                    android:min="0"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/exynos_hmp_up_text"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_row="3"
                    android:text="0"
                    android:textAlignment="center" />

                <TextView

                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="left"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="8dp"
                    android:layout_row="4"
                    android:text="Down Threshold" />

                <SeekBar
                    android:id="@+id/exynos_hmp_down"
                    android:layout_column="0"
                    android:layout_gravity="fill_horizontal"
                    android:layout_row="5"
                    android:enabled="false"
                    android:max="1000" />

                <TextView
                    android:id="@+id/exynos_hmp_down_text"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_row="5"
                    android:text="0"
                    android:textAlignment="center" />


                <TextView
                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="6"
                    android:gravity="center_vertical"
                    android:text="优先大核" />

                <CheckBox
                    android:id="@+id/exynos_hmp_booster"
                    android:layout_column="1"

                    android:layout_marginTop="5dp"
                    android:layout_row="6"
                    android:enabled="false" />

                <TextView
                    style="@style/textSmall"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill_horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_row="7"
                    android:text="Up/Down Threshold决定使用高性能核心的积极程度（数值越低越积极）" />

            </GridLayout>

            <GridLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="10dp"
                    android:layout_row="0"
                    android:text="Booster"
                    android:textColor="?colorAccent"
                    android:textSize="16dp" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="1"
                    android:gravity="center_vertical"
                    android:text="输入升频 持续时间（ms）" />

                <EditText
                    android:id="@+id/cpu_inputboost_time"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:hint="毫秒"
                    android:inputType="number"
                    android:maxLength="4"
                    android:textAlignment="textEnd" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="2"
                    android:gravity="center_vertical"
                    android:text="输入升频 频率" />

                <EditText
                    android:id="@+id/cpu_inputboost_freq"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:editable="false"
                    android:focusable="false"
                    android:inputType="text" />

                <TextView

                    android:layout_column="0"
                    android:layout_gravity="fill"
                    android:layout_row="3"
                    android:gravity="center_vertical"
                    android:text="优先大核" />

                <CheckBox
                    android:id="@+id/cpu_sched_boost"
                    android:layout_column="1"
                    android:layout_gravity="end"
                    android:layout_row="3" />
            </GridLayout>

            <GridLayout
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_columnSpan="2"
                    android:layout_gravity="fill"
                    android:layout_marginBottom="10dp"
                    android:layout_row="0"
                    android:text="Core Online"
                    android:textColor="?colorAccent"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_row="1"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/core_0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CPU0" />

                    <CheckBox
                        android:id="@+id/core_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CPU1" />

                    <CheckBox
                        android:id="@+id/core_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CPU2" />

                    <CheckBox
                        android:id="@+id/core_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CPU3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="2"
                    android:layout_row="2"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/core_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CPU4" />

                    <CheckBox
                        android:id="@+id/core_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CPU5" />

                    <CheckBox
                        android:id="@+id/core_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CPU6" />

                    <CheckBox
                        android:id="@+id/core_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="CPU7" />
                </LinearLayout>

                <TextView
                    style="@style/textSmall"
                    android:layout_column="0"
