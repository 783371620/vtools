<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TabHost
        android:id="@+id/freeze_tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/tab_freeze_apps"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        style="@style/ListCardItem"
                        android:alpha="0.9"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/textSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="偏见应用"
                                android:textColor="?colorAccent" />

                            <TextView
                                style="@style/textSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="应用偏见“应用场景”的一部分，在场景模式开启时，离开偏见应用界面2分钟后，自动冻结" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/freeze_menu"
                            style="?android:buttonBarButtonStyle"
                            android:layout_marginLeft="6dp"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:padding="0dp"
                            android:scaleType="centerInside"
                            android:src="@drawable/freeze_settings"
                            android:tint="?android:colorAccent" />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/ListCardItemLast"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="10dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:alpha="0.9"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/freeze_apps_search"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="搜索应用名"
                            android:inputType="textFilter"
                            android:maxLength="10"
                            android:padding="@dimen/activity_horizontal_margin"
                            android:singleLine="true"
                            android:textSize="16dp" />

                        <com.omarea.common.ui.OverScrollGridView
                            android:id="@+id/freeze_apps"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:numColumns="4" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tab_freeze_settings"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout style="@style/ListCardItem">

                        <Switch
                            android:id="@+id/freeze_suspend_mode"
                            style="@style/textTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="保留图标" />

                        <TextView
                            style="@style/textSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="冻结应用时不隐藏桌面图标，而仅仅将其置灰（与应用管理中的[暂停使用]效果相同），从而避免冻结应用时破坏桌面布局，此功能需要Android P+\n\n配合Xposed可在以下桌面中从冻结状态直接启动：\n一加桌面、一加Hydrogen桌面、一加氢桌面、Lawnchair测试版、Lawnchair魔趣版、MIUI桌面、LineageOS Trebuchet、MIUI桌面、MIUI全局搜索、POCO桌面、系统设置、Pixel 启动器" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_widget_background" />
        </LinearLayout>
    </TabHost>
</FrameLayout>
