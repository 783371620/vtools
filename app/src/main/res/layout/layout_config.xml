<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.omarea.vtools.FragmentConfig">

    <TabHost
        android:id="@+id/configlist_tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#33dddddd" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/configlist_tab0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#22dddddd">

                        <EditText
                            android:id="@+id/config_search_box"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:hint="搜索应用名"
                            android:inputType="textFilter"
                            android:padding="8dp"
                            android:singleLine="true"
                            android:textSize="16dp" />

                        <Spinner
                            android:id="@+id/configlist_type"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:entries="@array/powercfg_apptype_filter"
                            android:focusable="false"
                            android:padding="0dp" />

                        <Spinner
                            android:id="@+id/configlist_modes"
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:entries="@array/powercfg_modes_filter"
                            android:focusable="false"
                            android:padding="0dp" />
                    </LinearLayout>

                    <com.omarea.ui.OverScrollListView
                        android:id="@+id/config_defaultlist"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="50dp" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/blacklist_tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="亮屏时开启（解锁后）" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="30dp"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/auto_switch_network_on_wifi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:text="WIFI" />

                            <CheckBox
                                android:id="@+id/auto_switch_network_on_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:text="Data" />

                            <CheckBox
                                android:id="@+id/auto_switch_network_on_nfc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:text="NFC" />

                            <CheckBox
                                android:id="@+id/auto_switch_network_on_gps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:text="GPS" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="息屏后关闭（延迟30秒）" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/auto_switch_network_off_wifi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:text="WIFI" />

                            <CheckBox
                                android:id="@+id/auto_switch_network_off_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:text="Data" />

                            <CheckBox
                                android:id="@+id/auto_switch_network_off_nfc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:text="NFC" />

                            <CheckBox
                                android:id="@+id/auto_switch_network_off_gps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="5dp"
                                android:text="GPS" />
                        </LinearLayout>

                        <Switch
                            android:id="@+id/auto_clear_ignore_chager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:padding="8dp"
                            android:text="@string/auto_clear_ignore_chager"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"
                            android:paddingLeft="8dp"
                            android:text="@string/auto_clear_ignore_chager_desc"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:visibility="gone" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/configlist_tab5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.omarea.ui.OverScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <LinearLayout
                                android:id="@+id/config_cfg_select"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/textTitle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:paddingLeft="8dp"
                                        android:text="安装内置配置脚本" />

                                    <TextView
                                        style="@style/textSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:paddingLeft="8dp"
                                        android:text="安装本应用内置的模式配置脚本，由本应用开发者提供" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/config_cfg_select_0"
                                        android:layout_width="55dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="20dp"
                                        android:background="@android:color/transparent"
                                        android:textColor="@color/colorPrimary"
                                        android:text="保守" />

                                    <Button
                                        android:id="@+id/config_cfg_select_1"
                                        android:layout_width="55dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="20dp"
                                        android:background="@android:color/transparent"
                                        android:textColor="@color/colorPrimary"
                                        android:text="激进" />
                                </LinearLayout>
                            </LinearLayout>

                            <Switch
                                android:id="@+id/accu_switch"
                                style="@style/textTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:paddingLeft="8dp"
                                android:text="精准切换" />

                            <TextView
                                style="@style/textSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="70dp"
                                android:text="切换配置模式严格检查当前前台应用，避免悬浮窗抢占焦点导致意外的模式切换，但这会在频繁切换应用时增加耗电" />

                            <Switch
                                android:id="@+id/battery_monitor"
                                style="@style/textTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:paddingLeft="8dp"
                                android:text="耗电检测"
                                android:visibility="gone" />

                            <TextView
                                style="@style/textSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:text="加快常驻通知电流显示刷新，获得更精准的耗电速度信息，会增加亮屏时后台耗电（待机自动暂停）"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/textTitle"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:layout_weight="1"
                                    android:text="首选模式" />

                                <Spinner
                                    android:id="@+id/first_mode"
                                    android:paddingRight="0dp"
                                    android:layout_width="110dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|right"
                                    android:entries="@array/powercfg_modes" />
                            </LinearLayout>

                            <TextView
                                style="@style/textSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:text="新安装的应用默认使用的模式" />

                            <LinearLayout
                                android:layout_marginTop="30dp"
                                android:gravity="center_vertical"
                                android:id="@+id/config_cfg_customer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/textTitle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:paddingLeft="8dp"
                                        android:text="自选配置脚本" />

                                    <TextView
                                        style="@style/textSmall"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="10dp"
                                        android:paddingLeft="8dp"
                                        android:text="从SDCard下选择配置脚本，或在线获取YC提供的配置脚本" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="vertical">

                                    <Button
                                        android:id="@+id/config_customer_powercfg"
                                        android:layout_width="55dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="20dp"
                                        android:background="@android:color/transparent"
                                        android:text="本地"
                                        android:textColor="@color/colorPrimary" />

                                    <Button
                                        android:id="@+id/config_customer_powercfg_online"
                                        android:layout_width="55dp"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="20dp"
                                        android:background="@android:color/transparent"
                                        android:textColor="@color/colorPrimary"
                                        android:text="在线" />
                                </LinearLayout>
                            </LinearLayout>

                            <android.support.v7.widget.CardView
                                android:layout_marginTop="30dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginBottom="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:padding="8dp"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        style="@style/textSmall"
                                        android:textColor="@color/colorPrimary"
                                        android:text="改动说明："
                                        android:layout_marginBottom="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                    <TextView
                                        android:text="基于微·工具箱改进，锁屏优化选项现已默认开启不再提供手动控制\n\n此外，相对于老版本，动态响应的配置脚本位置有所变化，同时你也不再需要手动放置，可直接在工具箱里选择文件即可自动安装配置\n\n非常感谢yc发布的适用于工具箱的配置脚本，让更多的设备能够用上动态响应，现在你也可以在本界面点击“在线”按钮来快速获取配置脚本"
                                        style="@style/textSmall"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content" />
                                </LinearLayout>
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </com.omarea.ui.OverScrollView>
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_config_service_not_active"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#eee"
            android:text="未激活辅助服务 - 点击去激活" />
    </TabHost>

</LinearLayout>
