<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="screen"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:keepScreenOn="false"
    tools:openDrawer="start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:orientation="vertical">

            <Switch
                android:id="@+id/adv_find_viewid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:padding="8dp"
                android:text="报告View的ID"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="获得更完整的界面信息，Scene将通过windowId及window列表来判断当前活动窗口是否是悬浮窗"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="10dp" />

            <Switch
                android:id="@+id/adv_keyevent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:padding="8dp"
                android:text="按键行为捕获"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="允许辅助服务在后台捕获按键事件。如果Scene在后台运行时卡死，会导致按键没反应！！！"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="10dp" />

            <Switch
                android:id="@+id/adv_retrieve_window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:padding="8dp"
                android:text="检索窗口内容"
                android:textColor="?android:attr/textColorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="允许辅助服务检索窗口内容，正常情况下推荐开启此选项！"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="10dp" />

           <android.support.v7.widget.CardView
               android:layout_marginTop="20dp"
               android:layout_marginBottom="20dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:padding="10dp"
                   style="@style/textSmall"
                   android:textColor="@color/colorPrimary"
                   android:text="修改以上设置，均需要重启辅助服务才会生效！！！"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content" />
           </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


    <include
        layout="@layout/app_bar_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.support.v4.widget.DrawerLayout>
