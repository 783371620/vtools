<?xml version="1.0" encoding="utf-8"?>
<com.omarea.ui.OverScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.omarea.vboot.FragmentHome">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:showDividers="beginning"
        android:shrinkColumns="0,1,2"
        android:stretchColumns="0,1,2,3">

        <TableRow android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/sdfree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_span="2"
                android:background="#22888888"
                android:padding="20dp"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/datafree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_span="2"
                android:background="#22888888"
                android:padding="20dp"
                android:textSize="12dp" />
        </TableRow>

        <TableRow
            android:id="@+id/powermode_toggles"
            android:layout_marginBottom="4dp"
            android:visibility="visible">

            <Button
                android:id="@+id/btn_powersave"
                android:layout_marginLeft="4dp"
                android:background="#448888cc"
                android:text="省电" />

            <Button
                android:id="@+id/btn_defaultmode"
                android:layout_marginLeft="4dp"
                android:background="#4488cc88"
                android:text="均衡" />

            <Button
                android:id="@+id/btn_gamemode"
                android:layout_marginLeft="4dp"
                android:background="#44cccc88"
                android:text="性能" />

            <Button
                android:id="@+id/btn_fastmode"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="#44cc8888"
                android:text="极速" />
        </TableRow>

        <TableRow android:paddingLeft="5dp" android:paddingRight="5dp">

            <LinearLayout
                android:layout_marginRight="5dp"
                android:layout_span="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CPU-0" />

                    <TextView
                        android:id="@+id/home_info_cpu0"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="200Mhz 90%"
                        android:textAlignment="textEnd" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CPU-1" />

                    <TextView
                        android:id="@+id/home_info_cpu1"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="200Mhz 90%"
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CPU-2" />

                    <TextView
                        android:id="@+id/home_info_cpu2"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="200Mhz 90%"
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CPU-3" />

                    <TextView
                        android:id="@+id/home_info_cpu3"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="200Mhz 90%"
                        android:textAlignment="textEnd" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CPU-4" />

                    <TextView
                        android:id="@+id/home_info_cpu4"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="200Mhz 90%"
                        android:textAlignment="textEnd" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CPU-5" />

                    <TextView
                        android:id="@+id/home_info_cpu5"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="200Mhz 90%"
                        android:textAlignment="textEnd" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CPU-6" />

                    <TextView
                        android:id="@+id/home_info_cpu6"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="200Mhz 90%"
                        android:textAlignment="textEnd" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CPU-7" />

                    <TextView
                        android:id="@+id/home_info_cpu7"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="200Mhz 90%"
                        android:textAlignment="textEnd" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_span="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GPU" />

                    <TextView
                        android:id="@+id/home_info_gpu"
                        android:paddingRight="10dp"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textAlignment="textEnd" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RAM" />

                    <TextView
                        android:id="@+id/home_info_mem"
                        android:paddingRight="10dp"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textAlignment="textEnd" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SWAP" />

                    <TextView
                        android:id="@+id/home_info_swap"
                        android:paddingRight="10dp"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textAlignment="textEnd" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Battery" />

                    <TextView
                        android:paddingRight="10dp"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="+327mAh 37° 25%"
                        android:textAlignment="textEnd" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android" />

                    <TextView
                        android:id="@+id/home_info_android"
                        android:paddingRight="10dp"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textAlignment="textEnd" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kernel" />

                    <TextView
                        android:paddingRight="10dp"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="sdm845"
                        android:textAlignment="textEnd" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Platform" />

                    <TextView
                        android:id="@+id/home_info_platform"
                        android:paddingRight="10dp"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textAlignment="textEnd" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#22888888"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="动态响应" />

                    <TextView
                        android:id="@+id/home_info_dynamic"
                        android:paddingRight="10dp"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textAlignment="textEnd" />
                </LinearLayout>

            </LinearLayout>
        </TableRow>

    </TableLayout>
</com.omarea.ui.OverScrollView>
