<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="26dp"
    android:paddingRight="26dp">

    <TextView
        android:layout_marginTop="10dp"
        style="@style/textTitle"
        android:text="请检查你的设备"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        style="@style/textSmall"
        android:text="现在，请检查 [界面是显示]、[触摸操作]、[屏幕指纹解锁]、[密码解锁] 等功能是否正常。\n\n如果倒计时结束你还没有点击“确认修改”，Scene将会自动恢复默认分辨率和DPI！"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textAlignment="center"
        android:textColor="?android:colorAccent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        style="@style/textDefault"
        android:layout_marginBottom="16dp"
        android:id="@+id/dpi_modify_timeout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dpi_modify_cancel"
            android:text="@string/btn_cancel"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp" />

        <Button
            android:id="@+id/dpi_modify_confirm"
            android:textColor="?android:colorAccent"
            android:text="@string/btn_modify_confirm"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>