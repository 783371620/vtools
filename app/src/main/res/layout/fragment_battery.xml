<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.omarea.ui.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/battrystatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="电池信息："
                    android:textColor="?colorAccent"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="使用充电加速建议保持Scene后台运行！" />

                <TextView
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="电池保护功能，必须让Scene保持后台运行！" />
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:id="@+id/settings_pd_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/settings_pd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    android:text="USB-PD快充" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="启用USB-PD快充协议。（手动开关此选项可能会被系统自动还原...）"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="11dp" />

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="4dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="8dp"
                        android:text="当前状态：" />
                    <TextView
                        style="@style/textSmall"
                        android:text="未知"
                        android:id="@+id/settings_pd_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/settings_qc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="8dp"
                    android:text="@string/accessbility_charger" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/accessbility_charger_desc"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="11dp" />

                <SeekBar
                    android:id="@+id/settings_qc_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="9999" />

                <TextView
                    android:id="@+id/settings_qc_limit_desc"
                    style="@style/textSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:text="@string/settings_qc_limit_desc" />

                <TextView
                    android:id="@+id/settings_qc_limit_current"
                    style="@style/textSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:text="Current Limit:" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/krscript_item_ripple_inactive"
                android:id="@+id/bp_cardview"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/settings_bp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/accessbility_bp"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/accessbility_bp_desc"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="11sp" />

                <SeekBar
                    android:id="@+id/settings_bp_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100" />

                <TextView
                    android:id="@+id/accessbility_bp_level_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/accessbility_bp_level_desc"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingLeft="8dp"
                        android:text="手动控制" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <Button
                            android:id="@+id/bp_disable_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/btn_bg"
                            android:elevation="2dp"
                            android:text="禁止充电" />

                        <Button
                            android:id="@+id/bp_enable_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:background="@drawable/btn_bg"
                            android:elevation="2dp"
                            android:text="恢复充电" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp"
                    android:text="@string/battery_uevent_title"
                    android:textColor="?colorAccent" />

                <TextView
                    android:id="@+id/battery_uevent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="21dp"
                    android:layout_marginRight="21dp"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/krscript_item_ripple_inactive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="电池使用记录" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <Button
                        style="?android:buttonBarStyle"
                        android:id="@+id/btn_battery_history"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/btn_bg"
                        android:elevation="2dp"
                        android:text="查看记录" />

                    <Button
                        style="?android:buttonBarStyle"
                        android:id="@+id/btn_battery_history_del"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/btn_bg"
                        android:elevation="2dp"
                        android:text="删除记录" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.omarea.ui.OverScrollView>
</FrameLayout>
