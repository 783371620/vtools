<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.omarea.common.ui.OverScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout style="@style/ListCardItem">
                <TextView
                    android:id="@+id/battrystatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="电池信息："
                    android:textColor="?colorAccent"
                    android:textSize="11dp" />
                <TextView
                    style="@style/textSmall"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="使用充电加速建议保持Scene后台运行！" />

                <TextView
                    style="@style/textSmall"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="电池保护功能，必须让Scene保持后台运行！" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_pd_support" style="@style/ListCardItem">

                <Switch
                    android:id="@+id/settings_pd"
                    style="@style/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="USB-PD快充" />

                <TextView
                    style="@style/textSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="启用USB-PD快充协议。（手动开关此选项可能会被系统自动还原...）" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前状态：" />

                    <TextView
                        android:id="@+id/settings_pd_state"
                        style="@style/textSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未知" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/ListCardItem">
                <Switch
                    android:id="@+id/settings_qc"
                    style="@style/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/accessbility_charger" />

                <TextView
                    style="@style/textSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accessbility_charger_desc" />

                <SeekBar
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:id="@+id/settings_qc_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="9999" />

                <TextView
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:id="@+id/settings_qc_limit_desc"
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_qc_limit_desc" />

                <TextView
                    android:id="@+id/settings_qc_limit_current"
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Limit:" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bp_cardview" style="@style/ListCardItem" android:visibility="gone">

                <Switch
                    android:id="@+id/settings_bp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/textTitle"
                    android:text="@string/accessbility_bp"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textSmall"
                    android:text="@string/accessbility_bp_desc" />

                <SeekBar
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:id="@+id/settings_bp_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100" />

                <TextView
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:id="@+id/accessbility_bp_level_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/textSmall"
                    android:text="@string/accessbility_bp_level_desc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        style="@style/textTitle"
                        android:text="手动控制" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/bp_disable_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginEnd="@dimen/activity_horizontal_margin"
                            android:background="@drawable/btn_bg"
                            android:elevation="2dp"
                            android:text="禁止充电" />

                        <Button
                            android:id="@+id/bp_enable_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:background="@drawable/btn_bg"
                            android:elevation="2dp"
                            android:text="恢复充电" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/ListCardItem">

                <TextView
                    style="@style/textSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/battery_uevent_title"
                    android:textColor="?colorAccent" />

                <TextView
                    android:id="@+id/battery_uevent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/textSmall" />
            </LinearLayout>

            <LinearLayout style="@style/ListCardItemLast">

                <TextView
                    style="@style/textTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:text="电池使用记录" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_battery_history"
                        style="?android:buttonBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:background="@drawable/btn_bg"
                        android:elevation="2dp"
                        android:text="查看记录" />

                    <Button
                        android:id="@+id/btn_battery_history_del"
                        style="?android:buttonBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:background="@drawable/btn_bg"
                        android:elevation="2dp"
                        android:text="删除记录" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.omarea.common.ui.OverScrollView>
</FrameLayout>
