    <style name="AppThemePretty" parent="AppThemeLight">
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="colorPrimary">@color/pretty</item>
        <item name="colorPrimaryDark">@color/pretty</item>
        <item name="colorAccent">@color/pretty</item>
    </style>

    <style name="AppThemeViolet" parent="AppThemeLight">
        <item name="android:navigationBarColor">@android:color/white</item>
