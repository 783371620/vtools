        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryDark">@color/violet</item>
        <item name="colorAccent">@color/violet</item>
    </style>

    <style name="AppThemeNoActionBarNight" parent="AppThemeNight">
        <item name="android:textColor">#888888</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnim</item>
    </style>

    <style name="AppThemeWhite" parent="AppThemeLight">
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="colorPrimary">@color/lightPink</item>
        <item name="colorPrimaryDark">@color/lightPink</item>
        <item name="colorAccent">@color/lightPink</item>
    </style>

    <style name="AppTheme.AppBarOverlay.Light" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">?android:textColorPrimary</item>
        <item name="android:foregroundTint">?android:textColorPrimary</item>
        <item name="android:drawableTint">?android:textColorPrimary</item>
    </style>
</resources>