        <item name="colorAccent">@color/color_load_hight</item>
    </style>

    <style name="AppThemeRed" parent="AppThemeLight">
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowBackground">@color/newYearBgColor</item>
        <item name="colorPrimary">@color/newYearAccent</item>
