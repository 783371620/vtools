<resources>

    <style name="NotificationInfo" parent="android:TextAppearance.Material.Notification.Info" />

    <style name="NotificationTitle" parent="android:TextAppearance.Material.Notification.Title" />

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">#550094ff</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNight" parent="Theme.AppCompat">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">#559e00ba</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="android:textColor">#888888</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBarNight" parent="AppThemeNight">
        <item name="android:textColor">#888888</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textTitle">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="textSmall">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">10dp</item>
    </style><!--activity 对话框样式  -->
    <style name="FloatActivity" parent="Theme.AppCompat">
        <!-- float_box为我们定义的窗口背景-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:opacity">@integer/opacity</item>
    </style>
</resources>
